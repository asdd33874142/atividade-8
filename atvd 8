#include <iostream>

using namespace std;

int main() {
    // Declaração da variável para armazenar a temperatura em Fahrenheit
    float temperatura_fahrenheit;

    // Solicitar ao usuário que insira a temperatura em Fahrenheit
    cout << "Digite a temperatura em Fahrenheit: ";
    cin >> temperatura_fahrenheit;

    // Calcular a temperatura em Celsius
    float temperatura_celsius = (temperatura_fahrenheit - 32) / 1.8;

    // Exibir o resultado
    cout << "Temperatura em Fahrenheit: " << temperatura_fahrenheit << " °F" << endl;
    cout << "Temperatura em Celsius: " << temperatura_celsius << " °C" << endl;

    return 0;
}
